# Discord bot token
DISCORD_TOKEN=your_discord_bot_token
# Optional: guild command registration target for faster dev iteration
DISCORD_GUILD_ID=123456789012345678
DISCORD_ENABLED=true

# Local docker-compose postgres example
POSTGRES_DB=ai_discord_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# PostgreSQL datasource
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/ai_discord_bot
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres

# Assignment reminder scheduler
ASSIGNMENT_REMINDER_POLL_DELAY_MS=30000
ASSIGNMENT_REMINDER_GRACE_HOURS=24
ASSIGNMENT_REMINDER_MAX_PER_TICK=20
ASSIGNMENT_REMINDER_PRE_SCAN_HOURS=24

# Meeting voice summary skeleton (default OFF)
# Maps to: voice.summary.enabled / voice.summary.max-minutes / voice.summary.data-dir
# NOTE: disabled(false)면 /회의음성 시작/종료/상태는 모두 차단 응답만 반환
VOICE_SUMMARY_ENABLED=false
VOICE_SUMMARY_MAX_MINUTES=120
VOICE_SUMMARY_DATA_DIR=/data/voice

# Time policy note:
# - Discord command input for remind time uses KST (Asia/Seoul), e.g. "2026-03-01 21:30"
# - Database timestamps are stored as UTC (TIMESTAMPTZ, +00 is normal)
